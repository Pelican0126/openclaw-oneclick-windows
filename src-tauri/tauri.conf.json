{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenClaw Installer",
  "version": "0.1.0",
  "identifier": "com.openclaw.installer",
  "build": {
    "beforeDevCommand": "npm.cmd run dev",
    "beforeBuildCommand": "npm.cmd run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenClaw Installer",
        "width": 1280,
        "height": 840,
        "minWidth": 980,
        "minHeight": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.ico"],
    "targets": ["nsis", "msi"],
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    }
  }
}
